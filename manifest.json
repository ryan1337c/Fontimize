{
  "manifest_version": 3,
  "name": "Fontimize",
  "description": "An all-in-one tool used to enhance the online reading experience.",
  "version": "1.0",
  "permissions": ["tabs", "storage", "contextMenus", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "Icons/book16.png",
    "32": "Icons/book32.png",
    "48": "Icons/book48.png",
    "128": "Icons/book128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
